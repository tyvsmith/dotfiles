# Editor
set -gx EDITOR nvim
set -gx VISUAL $EDITOR

# SDKMAN config (only if installed via brew)
# The sdkman-for-fish plugin needs to know where sdkman is installed
if type -q brew
    set -l sdkman_prefix (brew --prefix sdkman-cli 2>/dev/null || echo "")
    # Only set if we got a real path and the libexec dir exists
    if test -n "$sdkman_prefix"
        and test "$sdkman_prefix" != ""
        and test -d "$sdkman_prefix/libexec"
        set -gx __sdkman_custom_dir "$sdkman_prefix/libexec"
    end
end

# 1Password SSH agent
{{- if eq .chezmoi.os "darwin" }}
set -x SSH_AUTH_SOCK ~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
{{- else }}
set -x SSH_AUTH_SOCK ~/.1password/agent.sock
{{- end }}
