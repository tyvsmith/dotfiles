# Editor
set -gx EDITOR nvim
set -gx VISUAL $EDITOR

# SDKMAN config (only if installed via brew)
if type -q brew
    set -l sdkman_prefix (brew --prefix sdkman-cli 2>/dev/null)
    if test -n "$sdkman_prefix" -a -d "$sdkman_prefix/libexec"
        set -g __sdkman_custom_dir "$sdkman_prefix/libexec"
    end
end

# 1Password SSH agent
{{- if eq .chezmoi.os "darwin" }}
set -x SSH_AUTH_SOCK ~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
{{- else }}
set -x SSH_AUTH_SOCK ~/.1password/agent.sock
{{- end }}
