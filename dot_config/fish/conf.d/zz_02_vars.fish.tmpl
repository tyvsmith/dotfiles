# =============================================================================
# Environment Variables
# Editor, SDK managers, and other global exports
# =============================================================================

# Editor
set -gx EDITOR nvim
set -gx VISUAL $EDITOR

# SDKMAN config (only if installed via brew)
# The sdkman-for-fish plugin needs to know where sdkman is installed
set -l sdkman_dir {{ template "brew-prefix" . }}/opt/sdkman-cli/libexec
if test -d "$sdkman_dir"
    set -gx __sdkman_custom_dir "$sdkman_dir"
end