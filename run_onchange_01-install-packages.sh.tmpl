#!/usr/bin/env bash
# Chezmoi run_onchange script: Install packages from Brewfile
# Brewfile hash: {{ include "Brewfile.tmpl" | sha256sum }}
set -euo pipefail

# shellcheck source=/dev/null
source "${CHEZMOI_SOURCE_DIR:-$(chezmoi source-path)}/scripts/lib/common.sh"

ensure_brew_in_path
require_cmd brew

log "Installing packages from Brewfile..."

brew bundle --file=<(render_template Brewfile.tmpl)
